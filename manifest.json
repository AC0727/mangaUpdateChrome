{
  "name": "manga notifier",
  "description": "Notifies if a manga has been updated",
  "version":"1.0",
  "manifest_version": 3,

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "service_worker": "service-workers/background.js"
  },


  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },


  "permissions": ["notifications", "alarms", "storage"]
}

